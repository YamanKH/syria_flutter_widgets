{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web (port 8080)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "web-server",
      "args": [
        "--web-port",
        "8080",
        "--web-hostname",
        "localhost"
      ]
    },
    {
      "name": "Flutter Web (Chrome)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "args": [
        "--web-port",
        "8080",
        "--web-hostname",
        "localhost"
      ]
    }
  ]
}
